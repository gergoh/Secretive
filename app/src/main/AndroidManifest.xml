<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bigchicken.secretive">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Text Encrypting and Decrypting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaesarCipher"
            android:label="Caesar Cipher"></activity>
        <activity
            android:name=".VigenereCipher"
            android:label="Vigenere Cipher"></activity>
        <activity
            android:name=".PlayfairCipher"
            android:label="Playfair Cipher"></activity>
        <activity
            android:name=".RailFenceCipher"
            android:label="Rail Fence Cipher"></activity>
    </application>

</manifest>